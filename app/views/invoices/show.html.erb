<p id="notice"><%= notice %></p>

<p>
  <strong>Product:</strong>
  <%= @invoice.product %>
</p>

<p>
  <strong>Amount:</strong>
  <%= number_to_currency(@invoice.amount) %>
</p>

<p>
  <strong>Card type:</strong>
  <%= @invoice.card_type %>
</p>



<p>
  <strong>Purchaser:</strong>
  <%= @invoice.user.name %>
</p>

<p>
  <strong>Signed on <%= @invoice.created_at.strftime("%B %d, %Y") %>:</strong>
  <%= image_tag @invoice.signature %>
</p>

