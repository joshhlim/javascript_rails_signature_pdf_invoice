<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Amount</th>
      <th>Card</th>
      <th>Ends in</th>
      <th>Purchaser</th>
      <th>Purchase Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.product %></td>
        <td><%= number_to_currency(invoice.amount) %></td>
        <td><%= invoice.card_type %></td>
        <td><%= invoice.card_last4 %></td>
        <td><%= invoice.user.name %></td>
        <td><%= invoice.created_at.strftime("%B %d, %Y") %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

